<!-- views/editProfile.ejs -->

<%- include('partials/header') %>

<%- include('partials/sidebar', { option: "profile" }) %>


<main class="main-content">
  <div class="header-wrap">
      <div class="header-title">
          <h2>Edit Profile</h2>
          <p>Edit your personal profile</p>
      </div>
  </div>

  <div class="tabular-wrap module">
    <form action="/edit-profile" method="POST" class="table-container">
      <table class="profile-table">
          <tr>
              <td>
                  <label for="firstName">First Name:</label>
              </td>
              <td>
                  <input type="text" id="firstName" name="firstName" class="profile-items" required value="<%= record.patient.firstName %>">
              </td>
          </tr>
          <tr>
              <td>
                  <label for="lastName">Last Name:</label>
              </td>
              <td>
                  <input type="text" id="lastName" name="lastName" class="profile-items" required value="<%= record.patient.lastName %>">
              </td>
          </tr>
          <!-- <tr>
              <td>
                  <label for="dateOfBirth">Date of Birth:</label>
              </td>
              <td>
                  <input type="date" id="dateOfBirth" name="dateOfBirth" class="profile-items" value="<%= record.dateOfBirth %>">
              </td>
          </tr> -->
          <tr>
              <td>
                  <label for="gender">Gender:</label>
              </td>
              <td>
                  <select id="gender" name="gender" class="profile-items">
                      <option value="Male" <%= record.gender === 'Male' ? 'selected' : '' %>>Male</option>
                      <option value="Female" <%= record.gender === 'Female' ? 'selected' : '' %>>Female</option>
                      <option value="Other" <%= record.gender === 'Other' ? 'selected' : '' %>>Other</option>
                  </select>
              </td>
          </tr>
          <tr>
              <td>
                  <label for="phone">Phone:</label>
              </td>
              <td>
                  <input type="tel" id="phone" name="phone" class="profile-items" value="<%= record.contact.phone %>">
              </td>
          </tr>
          <tr>
              <td>
                  <label for="email">Email:</label>
              </td>
              <td>
                  <input type="email" id="email" name="email" class="profile-items" value="<%= record.contact.email %>">
              </td>
          </tr>
          <tr>
              <td>
                  <label for="street">Street:</label>
              </td>
              <td>
                  <input type="text" id="street" name="street" class="profile-items" value="<%= record.address.street %>">
              </td>
          </tr>
          <tr>
              <td>
                  <label for="city">City:</label>
              </td>
              <td>
                  <input type="text" id="city" name="city" class="profile-items" value="<%= record.address.city %>">
              </td>
          </tr>
          <tr>
              <td>
                  <label for="state">State:</label>
              </td>
              <td>
                  <input type="text" id="state" name="state" class="profile-items" value="<%= record.address.state %>">
              </td>
          </tr>
          <tr>
              <td>
                  <label for="zip">ZIP Code:</label>
              </td>
              <td>
                  <input type="text" id="zip" name="zip" class="profile-items" value="<%= record.address.zip %>">
              </td>
          </tr>
      </table>
  
      <button type="submit" class="btn">Save Changes</button>
  </form>
  
  
  </div>
</main>



