    <%- include('partials/sidebar', { option: "profile" }) %>

    <main class="main-content">
        <h1>Add Health Record</h1>

        <form action="/add" method="post" class="table-container">
            <table class="profile-table">
                <tr>
                    <td><label for="firstName">First Name:</label></td>
                    <td><input type="text" id="firstName" name="firstName" class="profile-items" required></td>
                </tr>
                <tr>
                    <td><label for="lastName">Last Name:</label></td>
                    <td><input type="text" id="lastName" name="lastName" class="profile-items" required></td>
                </tr>
                <tr>
                    <td><label for="dateOfBirth">Date of Birth:</label></td>
                    <td><input type="date" id="dateOfBirth" name="dateOfBirth" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="gender">Gender:</label></td>
                    <td>
                        <select id="gender" name="gender" class="profile-items">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label for="phone">Phone:</label></td>
                    <td><input type="tel" id="phone" name="phone" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="email">Email:</label></td>
                    <td><input type="email" id="email" name="email" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="street">Street:</label></td>
                    <td><input type="text" id="street" name="street" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="city">City:</label></td>
                    <td><input type="text" id="city" name="city" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="state">State:</label></td>
                    <td><input type="text" id="state" name="state" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="zip">ZIP Code:</label></td>
                    <td><input type="text" id="zip" name="zip" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="allergies">Allergies (comma-separated):</label></td>
                    <td><input type="text" id="allergies" name="allergies" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="medications">Medications (comma-separated):</label></td>
                    <td><input type="text" id="medications" name="medications" class="profile-items"></td>
                </tr>
                <tr>
                    <td><label for="surgeries">Surgeries (comma-separated):</label></td>
                    <td><input type="text" id="surgeries" name="surgeries" class="profile-items"></td>
                </tr>
            </table>
            <button type="submit" class="btn">Add Record</button>
        </form>
        
    </main>
</body>

</html>
